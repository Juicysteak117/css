{
    "name": "competitiveoverwatch-css",
    "private": true,
    "devDependencies": {
        "cssmin": "latest",
        "imagemin-cli": "latest",
        "mkdirp": "latest",
        "npm-run-all": "latest",
        "rimraf": "latest"
    },
    "scripts": {
        "clean": "rimraf dist && mkdirp dist",

        "css-complete": "du -h dist/final.css",
        "img-complete": "du -h dist/images",
        "build-complete": "echo && run-s img-complete css-complete && echo \"\nBuild complete.\" && open dist",

        "build:css": "cssmin src/main.css > dist/final.css",
        "build:img": "imagemin src/images-export/* -o dist/images/",
        "build:all": "npm-run-all clean -p build:css build:img -s build-complete",
        
        "build": "npm run build:all -s",
        "build-css": "run-s -s build:css css-complete && open dist/final.css",
        "build-img": "run-s -s build:img img-complete",

        "test": "copy-paste copy('test')"
    }
}