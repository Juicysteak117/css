{
    "name": "competitiveoverwatch-css",
    "private": true,
    "devDependencies": {
    	"copy-paste-cli": "latest",
        "cssmin": "latest",
        "imagemin-cli": "latest",
        "npm-run-all": "latest",
        "open-cli": "latest",
        "shx": "latest"
    },
    "scripts": {
        "clean": "shx rm -rf dist && shx mkdir -p dist",

        "css-complete": "du -h dist/final.css && shx echo && shx cat dist/final.css | copy-paste copy",
        "img-complete": "du -h dist/images",
        "build-complete": "shx echo && run-s -s img-complete css-complete && shx echo '\nâœ” Build complete' && open-cli dist",

        "build:css": "cssmin src/main.css > dist/final.css",
        "build:img": "imagemin src/images-export/* -o dist/images/",
        "build:all": "npm-run-all clean -p build:css build:img -s build-complete",
        
        "build": "npm run build:all -s",
        "build-css": "run-s -s build:css css-complete",
        "build-img": "run-s -s build:img img-complete"
    }
}