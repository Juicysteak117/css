{
    "name": "competitiveoverwatch-css",
    "private": true,
    "devDependencies": {
        "cssmin": "latest",
        "imagemin-cli": "latest",
        "mkdirp": "latest",
        "replace": "latest",
        "rimraf": "latest"
    },
    "scripts": {
        "min-css": "cssmin src/main.css > dist/final.css",

        "clean": "rimraf dist && mkdirp dist",
        "build-complete": "echo '\nBuild complete.\n' && du -h dist/final.css && du -hs dist/images && echo '\n' && open dist",

        "build:img": "imagemin src/images-export/* -o dist/images/",
        "build:css": "npm run min-css",
        "build:all": "npm run clean && npm run build:css && npm run build:img && npm run build-complete",
        
        "build": "npm run build:all -s"
    }
}